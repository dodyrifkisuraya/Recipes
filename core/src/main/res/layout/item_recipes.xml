<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_thumb_recipes"
            android:layout_width="238dp"
            android:layout_height="143dp"
            android:src="#F1F1F1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_difficulty"
            android:background="@drawable/ic_tag_difficulty"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_sans_semibold"
            android:paddingStart="@dimen/twelve_dp"
            android:paddingEnd="@dimen/eight_dp"
            android:paddingVertical="@dimen/four_dp"
            android:includeFontPadding="false"
            android:textSize="@dimen/thirteen_sp"
            app:layout_constraintTop_toTopOf="@id/img_thumb_recipes"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/eight_dp"/>

        <TextView
            android:id="@+id/tv_title_recipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dummy_title_recipes"
            app:layout_constraintTop_toBottomOf="@+id/img_thumb_recipes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/thirteen_sp"
            android:theme="@style/Theme.Masako.TextColor"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <TextView
            android:id="@+id/tv_detail_recipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dummy_info_recipes"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_recipes"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:textSize="@dimen/thirteen_sp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>