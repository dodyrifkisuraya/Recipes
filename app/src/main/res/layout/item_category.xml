<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="#F1F1F1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/image_description" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_title_category"
        android:maxEms="5"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/icon_category"
        app:layout_constraintEnd_toEndOf="@id/icon_category"
        app:layout_constraintTop_toBottomOf="@id/icon_category"
        android:layout_marginTop="4dp"
        android:theme="@style/Theme.Masako.TextColor"
        android:textSize="@dimen/thirteen_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>